{
  "manifest_version": 2,
  "name": "ZClassic Wallet",
  "version": "1.0.0",
  "description": "Connect to Web Z - Decentralized apps powered by ZClassic blockchain",
  "author": "ZClassic Community",
  
  "icons": {
    "16": "icons/zcl-16.png",
    "48": "icons/zcl-48.png",
    "128": "icons/zcl-128.png"
  },
  
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "notifications",
    "http://localhost:8232/",
    "http://127.0.0.1:8232/"
  ],
  
  "background": {
    "scripts": [
      "background/rpc-client.js",
      "background/wallet-manager.js",
      "background/message-handler.js",
      "background/background.js"
    ],
    "persistent": true
  },
  
  "browser_action": {
    "default_icon": {
      "16": "icons/zcl-16.png",
      "32": "icons/zcl-32.png"
    },
    "default_title": "ZClassic Wallet",
    "default_popup": "popup/popup.html"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/injected-provider.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  
  "web_accessible_resources": [
    "inpage/webz-provider.js"
  ],
  
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  }
}
